{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Build tasks
        {
            "label": "build ekf_cal",
            "detail": "Build ekf_cal package",
            "type": "shell",
            "command": "colcon build --symlink-install --packages-select ekf_cal --cmake-args '-DCMAKE_EXPORT_COMPILE_COMMANDS=On'",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        {
            "label": "debug ekf_cal",
            "detail": "Build ekf_cal package with debug symbols",
            "type": "shell",
            "command": "colcon build --symlink-install --packages-select ${input:package} --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        {
            "label": "doxygen",
            "detail": "Build ekf_cal documentation",
            "type": "shell",
            "command": "doxygen .doxyfile",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
