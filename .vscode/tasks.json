        {
            "label": "source-foxy",
            "detail": "Sources the current workspace with bash",
            "type": "shell",
            "command": "source ${workspaceFolder}/../../install/setup.bash",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "test workspace",
            "detail": "Run all unit tests and show results.",
            "type": "shell",
            "command": "colcon test && colcon test-result --all",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
    ],
